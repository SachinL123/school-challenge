@using Schoolchallenge.Model.ViewModels
@using GridMvc.Html

@model List<StudentViewModel>


@{
    ViewBag.Title = "Student Details";
}

<div>
    <h2>Student List</h2>
    <hr />

    <div class="row">
        <div class="col-lg-9">
            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#studentModal" onclick="Student.clearForm();"> <span class="glyphicon glyphicon-plus-sign"></span> Add New Student</button>
        </div>
        <div class="col-lg-3 offset-2">
            <button type="button" class="btn btn-secondary btn-sm" data-toggle="modal" data-target="#studentUploadModal" onclick="Student.clearUploadedFile();"> <span class="glyphicon glyphicon-cloud-upload"></span> Import Students</button>
        </div>

    </div>

    <hr />
    <div class="row">
        <table id="teacherDetails" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        Number
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Has Scholarship
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody class="tbody"></tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="studentUploadModal" tabindex="-1" role="dialog" aria-labelledby="uploadModallabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="teacherModalLabel">Import Students</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <input type="file" id="txtUploadStudents" name="file" required />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-12">
                        <button type="button" class="btn btn-danger btn-sm" onclick="Student.clearUploadedFile();"> <span class="glyphicon glyphicon-remove-sign"></span> Clear</button>
                        <button type="button" class="btn btn-primary btn-sm" id="uploadStudents"> <span class="glyphoicon glyphicon glyphicon-import"></span> Import</button>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="studentModal" tabindex="-1" role="dialog" aria-labelledby="studentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dissmiss="modal"><span aria-hidden="true">×</span></button>*@
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="studentModalLabel">Add Student</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="d-none">
                        <label for="StudentId">ID</label>
                        <input type="text" class="form-control" id="StudentId" placeholder="ID" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Number">Number</label>
                        <input type="text" class="form-control" id="Number" placeholder="Number" />
                    </div>
                    <div class="form-group">
                        <label for="FirstName">First Name</label>
                        <input type="text" class="form-control" id="FirstName" placeholder="First Name" />
                    </div>
                    <div class="form-group">
                        <label for="LastName">Last Name</label>
                        <input type="text" class="form-control" id="LastName" placeholder="Last Name" />
                    </div>
                    <div id="HasScholarship" class="btn-group">
                        <div class="form-group">
                            <label for="HasScholarship">Has Scholarship</label>
                        </div>
                        <label class="btn"><input type="radio" name="HasScholarship" value="true" checked="checked">Yes</label>
                        <label class="btn"><input type="radio" name="HasScholarship" value="false">No</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Student.add();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Student.update()();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {  
        Student.getAll();
        Student.Import();
    });
</script>